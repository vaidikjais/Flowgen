# ============================================================================
# LLM CONFIG
# ============================================================================

# Primary LLM Provider: nvidia, openai, or gemini
LLM_PROVIDER= nvidia

# LLM - NVIDIA
NVIDIA_API_KEY=
NVIDIA_MODEL=qwen/qwen3-next-80b-a3b-instruct

# LLM - GEMINI
GOOGLE_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-pro

# LLM - OPENAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# ============================================================================
# EMBEDDING CONFIG
# ============================================================================

# Embedding API Provider
EMBEDDING_PROVIDER=nvidia

# NVIDIA EMBEDDING
NVIDIA_EMBEDDING_MODEL=nvidia/llama-3.2-nemoretriever-1b-vlm-embed-v1

# OPENAI EMBEDDING
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# GEMINI EMBEDDING
GEMINI_EMBEDDING_MODEL=gemini-embedding-001

# ============================================================================
# CHUNKING CONFIGURATION
# ============================================================================

MAX_CHUNK_SIZE=1600
CHUNK_OVERLAP=300

# ============================================================================
# CONVERTER (Markdown to JSON)
# ============================================================================

USE_LLM_CONVERTER=true

# Converter LLM Provider
CONVERTER_PROVIDER=nvidia

# Converter Model
CONVERTER_MODEL=qwen/qwen3-next-80b-a3b-instruct

# ============================================================================
# VECTOR DATABASE
# ============================================================================

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# Tavily Search API (required for web search)
TAVILY_API_KEY=your-tavily-api-key

# ============================================================================
# LANGSMITH CONFIG
# ============================================================================

LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com 
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=your-project

# ============================================================================
# DEVELOPMENT CONFIG
# ============================================================================

# Hardcoded Session Mode Toggle
USE_HARDCODED_SESSION=true
HARDCODED_COLLECTION=pm_agent_468e90d3
HARDCODED_MD_DIR=data/hardcoded_session/markdown
HARDCODED_JSON_DIR=data/hardcoded_session/json

USE_HARDCODED_FEASIBILITY=true